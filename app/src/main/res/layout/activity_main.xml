<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.demo.Ramadan.MainActivity">

    <TextView
        android:id="@+id/idTvTimeHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Home"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/background_text_color"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTvDateHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTvTimeHome"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Time"
        android:textColor="@color/background_text_color"
        android:layout_marginTop="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTvDateHome"
        android:paddingTop="15dp"
        android:layout_above="@+id/adView"
        android:paddingBottom="15dp"
        android:id="@+id/scrollView"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:id="@+id/rl6kalma"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iv6kalma"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/kalmaicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:id="@+id/ivramadantiming"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ramadantimeicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivtasbeeh"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tasbeehicon" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="33dp"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/rl6kalma"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:id="@+id/ivduas"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/duaicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/relativeLayout2"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivqibladirction"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/qiblaicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/relativeLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/relativeLayout2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivprayertiming"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/prayertimeicon" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:id="@+id/relativeLayout4"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="200dp"
                android:layout_marginTop="33dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivlearnquran"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:src="@drawable/learnquranicon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/relativeLayout6"
                android:layout_alignBottom="@+id/relativeLayout4"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivmosquenearby"
                    android:clickable="true"
                    android:onClick="Clicker"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mosque"
                     />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
