<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/border"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:scaleX=".6"
        android:scaleY=".6"
        android:src="@drawable/calender"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/imageView5"
        android:id="@+id/dateRamadan"
        android:textColor="@color/background_text_color"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/seharRamadan"
        android:src="@drawable/clock"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suhoor"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/imageView6"
        android:textColor="@color/background_text_color"
        android:id="@+id/seharRamadan"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/clock"
        android:scaleY=".6"
        android:scaleX=".6"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/aftarRamadan"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aftar"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/background_text_color"
        android:id="@+id/aftarRamadan"
        />
</RelativeLayout>

