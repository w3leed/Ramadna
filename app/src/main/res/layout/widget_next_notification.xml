	android:orientation="vertical" android:background="@drawable/back"
	android:id="@+id/widget_next_notification" android:gravity="center"
	android:focusable="true" android:clickable="true">
	<TextView android:id="@+id/time_name" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="@android:color/white"
		android:gravity="center" />
	<TextView android:id="@+id/next_notification"
